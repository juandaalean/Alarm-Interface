<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/card_view_style"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_margin="@dimen/card_margin"
    android:padding="@dimen/card_padding"
    app:cardBackgroundColor="@color/card_background_opacity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_margin="@dimen/menu_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alarm_card_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_size"
            android:layout_marginBottom="@dimen/margin_start_text"
            tools:text="7:30"
            android:fontFamily="@font/syne"/>

        <TextView
            android:id="@+id/alarm_card_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:textSize="@dimen/normal_text_size"
            android:fontFamily="@font/syne"
            tools:text="Sonar una vez | Alarma despertador"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:gravity="center"
        android:layout_margin="@dimen/switch_margin"
        android:orientation="vertical">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</androidx.cardview.widget.CardView>